{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "preserve",

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "allowJs": true,
    "incremental": true,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
