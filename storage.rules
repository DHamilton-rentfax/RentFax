rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Tenant logo uploads
    match /tenant-logos/{tenantId}/{fileName} {
      allow write: if request.auth != null 
                   && request.auth.token.companyId == tenantId;

      allow read: if true;
    }

    // Public renter verification uploads (secured by token)
    match /verifications/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if false; // never publicly readable
    }

    // Default block everything else
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
