rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function role() {
      return request.auth.token.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && role() == "SUPER_ADMIN";
    }

    function isRenter(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // ---------------------------------------------------
    // INCIDENT EVIDENCE UPLOAD
    // ---------------------------------------------------
    match /evidence/{incidentId}/{filename} {
      allow read: if isSuperAdmin() || isSignedIn();
      allow write: if isSignedIn();    // companies upload
    }

    // ---------------------------------------------------
    // RENTER VERIFY (ID + SELFIE)
    // ---------------------------------------------------
    match /verify/{renterId}/{filename} {
      allow write: if isRenter(renterId);
      allow read: if isSuperAdmin() || isRenter(renterId);
    }

    // ---------------------------------------------------
    // PUBLIC REPORT ASSETS (AUTO GENERATED)
    // ---------------------------------------------------
    match /publicReports/{id}/{filename} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
  }
}