rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- BUSINESSES ---
    match /businesses/{businessId} {
      allow read: if isBusinessMember(businessId);
      allow write: if isAdmin(businessId);
    }

    // --- DISPUTES ---
    match /disputes/{disputeId} {
      allow read: if isBusinessMember(resource.data.businessId) ||
                  request.auth.uid == resource.data.renterId;

      allow write: if isAdmin(resource.data.businessId) ||
                   (isTeamMember(resource.data.businessId) && request.resource.data.status == "under_review");
    }

    // --- Helper functions ---
    function isBusinessMember(businessId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businessId == businessId;
    }

    function isAdmin(businessId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["SUPER_ADMIN", "BUSINESS_ADMIN"] &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businessId == businessId;
    }

    function isTeamMember(businessId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "TEAM_MEMBER" &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businessId == businessId;
    }
  }
}