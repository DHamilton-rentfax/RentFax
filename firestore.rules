
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == "SUPER_ADMIN";
    }

    match /users/{userId} {
      allow update: if isSuperAdmin();
      allow read: if request.auth.token.role in ["SUPER_ADMIN", "ADMIN"];
    }

    match /companies/{companyId} {
      allow read, write: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      allow read, write: if isSuperAdmin();
    }

    match /disputes/{disputeId} {
      allow read, write: if isSuperAdmin();
    }

    match /blogs/{blogId} {
      allow read, write: if isSuperAdmin();
    }

    match /renters/{renterId} {
      allow read, write: if isSuperAdmin();
    }
    
    match /auditLogs/{logId} {
      allow read: if request.auth.token.role == "SUPER_ADMIN";
      allow create: if request.auth != null; // logs can be created by any authenticated action
      allow update, delete: if false; // logs cannot be tampered with
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
