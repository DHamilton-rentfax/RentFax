rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Disputes
    match /disputes/{disputeId} {
      allow read, update, delete: if request.auth != null && resource.data.renterId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.renterId == request.auth.uid;
    }

    // Newsletter
    match /newsletter_subscribers/{docId} {
      allow read, write: if true;
    }
  }
}
