rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------
    // 1. Users Collection
    // ------------------------------
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to read/write their own notifications
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ------------------------------
    // 2. Blogs Collection
    // ------------------------------
    match /blogs/{blogId} {
      allow read: if true;
      allow write, update, delete: if request.auth.token.role in ['super_admin', 'admin', 'content_manager'];
    }

    // ------------------------------
    // 3. Analytics Collection
    // ------------------------------
    match /analytics/{docId} {
      allow read: if request.auth.token.role in ['super_admin', 'admin', 'content_manager'];
      allow write: if request.auth.token.role in ['super_admin', 'admin'];
    }

    // ------------------------------
    // 4. Other Admin Collections
    // ------------------------------
    match /disputes/{disputeId} {
      allow read, write: if request.auth.token.role in ['super_admin', 'admin'];
    }

    match /incidents/{incidentId} {
      allow read, write: if request.auth.token.role in ['super_admin', 'admin'];
    }

    match /auditLogs/{logId} {
      allow read: if request.auth.token.role in ['super_admin', 'admin'];
      allow create: if request.auth != null;
      allow update, delete: if false; // Immutable
    }
    
    // ------------------------------
    // 5. Company & Invite Rules
    // ------------------------------
    match /companies/{companyId} {
        allow read: if request.auth.token.companyId == companyId;
        allow create: if request.auth != null;
        allow update: if request.auth.token.role == 'super_admin' || (request.auth.token.role == 'admin' && request.auth.token.companyId == companyId);
    }
    
    match /invites/{inviteId} {
        allow read: if true; // Publicly readable for lookup
        allow create, update: if request.auth.token.role in ['super_admin', 'admin'];
    }

  }
}
