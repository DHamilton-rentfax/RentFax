rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILES
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if false;
    }

    // REPORTS
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth.token.role in ['admin', 'superadmin', 'company'];
      allow update, delete: if request.auth.token.role in ['admin', 'superadmin'];
    }

    // DEEP REPORTS
    match /deepReports/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.auth.token.role in ['admin', 'superadmin']
      );
      allow update: if false;
      allow delete: if false;
    }

    // DISPUTES
    match /disputes/{disputeId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth.token.role in ['admin', 'superadmin'];
    }

    // AUDIT LOGS
    match /auditLogs/{logId} {
      allow create: if request.auth.token.role in ['admin','superadmin'];
      allow read: if request.auth.token.role in ['admin', 'superadmin'];
      allow update, delete: if false;
    }

    // NOTIFICATIONS
    match /notifications/{notifId} {
      allow read: if request.auth.token.role in ['admin', 'superadmin'];
      allow create: if request.auth != null;
    }

    // UNAUTHORIZED DRIVERS
    match /unauthorizedDrivers/{id} {
      allow read, update: if request.auth.token.role in ['admin','superadmin'];
      allow create: if request.auth != null;
    }
  }
}