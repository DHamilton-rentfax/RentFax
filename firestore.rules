// RENTFAX FIRESTORE RULES â€“ FULL PRODUCTION SETUP

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // super admins have full access
      allow read, write: if isSuperAdmin();
    }

    // --- VERIFICATION ---
    match /verification/{userId} {
      allow read, write: if isSuperAdmin() || request.auth.uid == userId;
    }

    // --- INCIDENTS ---
    match /incidents/{incidentId} {
      allow read: if true; // public for renter reports
      allow create: if request.auth != null; // landlords only from app
      allow update: if isSuperAdmin() || request.auth!=null;
      allow delete: if isSuperAdmin();
    }

    // --- DISPUTES ---
    match /disputes/{disputeId} {
      allow read, write: if request.auth != null && (
        resource.data.renterId == request.auth.uid ||
        request.auth.token.role == "SUPER_ADMIN"
      );
    }

    // --- AUDIT LOGS ---
    match /audit/{logId} {
      allow read: if isSuperAdmin();
      allow create: if true; // written by server only
      allow update, delete: if false;
    }

    // --- PUBLIC REPORTS ---
    match /reports/{reportId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if isSuperAdmin();
    }

    // --- BILLING SUBSCRIPTIONS ---
    match /subscriptions/{subId} {
      allow read, write: if isSuperAdmin();
    }

    // --- FRAUD DETECTION ---
    match /fraud_signals/{userId} {
      allow read: if request.auth!=null && request.auth.uid == userId;
      allow write: if isSuperAdmin();
    }
    
    // --- IDENTITY & BILLING (NEW) ---
    match /identityChecks/{id} {
      allow read: if request.auth != null && (
        request.auth.token.role == 'ADMIN' ||
        resource.data.companyId == request.auth.token.companyId
      );
      allow write: if request.auth != null &&
        request.auth.token.companyId == request.resource.data.companyId;
    }

    match /billing/usage/{companyId}/records/{usageId} {
      allow read: if request.auth.token.companyId == companyId;
      allow write: if request.auth.token.role == 'ADMIN';
    }

    match /companies/{companyId}/settings {
      allow read: if request.auth.token.companyId == companyId;
      allow write: if request.auth.token.companyId == companyId;
    }

    // --- DEFAULT DENY ---
    match /{document=**} {
      allow read, write: if false;
    }

    function isSuperAdmin() {
      return request.auth != null &&
             request.auth.token.role == "SUPER_ADMIN";
    }
  }
}